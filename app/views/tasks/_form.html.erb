<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">

    <div class="panel-heading">
      <h4><%= t('.add_task', :default => "Add task") %></h4>
    </div>

    <%= form_for([@project, @project.tasks.build], remote: true) do |f| %>
        <div class="panel-body" id="task_form">
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control task_title" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control task_description" %>
          </div>

          <div class="form-group">
            <%= f.label :user_id, 'Manager: ' %>
            <%= collection_select(:task, :user_id, User.all, :id, :last_name, promt: false) %>
          </div>

          <div class="form-group">
            <%= f.submit class: "btn btn-primary btn_center" %>
          </div>
        </div>
    <% end %>
  </div>
</div>